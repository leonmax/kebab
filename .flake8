[flake8]
exclude =
    .venv,
    .git,
    __pycache__,
    dist,
    *.ini,

# Recommend matching the black line length (default 88),
# rather than using the flake8 default of 79:
max-line-length = 88
max-complexity = 8
extend-ignore =
    # See https://black.readthedocs.io/en/stable/the_black_code_style.html#slices
    # Also, https://github.com/PyCQA/pycodestyle/issues/373
    E203,
    # See https://black.readthedocs.io/en/stable/the_black_code_style.html#line-breaks-binary-operators
    W503,

count = True
ignore = BLK100, I
